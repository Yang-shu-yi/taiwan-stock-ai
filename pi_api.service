[Unit]
Description=taiwan-stock-ai API Server
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/pi/taiwan-stock-ai
EnvironmentFile=/home/pi/taiwan-stock-ai/.env
ExecStart=/home/pi/taiwan-stock-ai/venv/bin/uvicorn api_server:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
